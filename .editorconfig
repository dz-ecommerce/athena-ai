# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# PHP files
[*.php]
indent_style = space
indent_size = 4

# JavaScript, JSON, YAML files
[*.{js,json,yml,yaml}]
indent_style = space
indent_size = 2

# CSS, SCSS files
[*.{css,scss}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Composer files
[composer.json]
indent_style = space
indent_size = 4

# Package files
[package.json]
indent_style = space
indent_size = 2

# Webpack config files
[webpack.*.js]
indent_style = space
indent_size = 2

# Ignore minified files
[*.min.{js,css}]
indent_style = ignore

# Git merge files
[*.{diff,md,markdown,mdx,txt}]
trim_trailing_whitespace = false
